def linearSearch():
  l=[]
  n=int(input("Enter no of elements:"))
  for i in range(0,n):
    k=int(input("Enter element:"))
    l.append(k)
  print(l)
  flag=0
  p=int(input("Enter an Element to search:"))
  for i in range(0,n):
   if(p==l[i]):
     print("Element is found loc",i+1)
     flag=1
  if(flag==0):
     print("Element not Found") 
linearSearch()  

output:
Enter no of elements:5
Enter element:4
Enter element:5
Enter element:8
Enter element:7
Enter element:9
[4, 5, 8, 7, 9]
Enter an Element to search:5
Element is found loc 2
